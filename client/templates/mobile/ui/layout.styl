@import 'nib'

.mgb15
	margin-bottom 30px

.pd15
	padding 15px



.is-mobile *
	-webkit-transition .2s ease-in-out

html
body
#mobile-layout-wrapper
#mobile-layout
#mobile-page
#mobile-signin-wrapper
	width 100%
	height @width

body
	// background url('/mobile-layout-background.png') no-repeat fixed center
	// background-size cover
	font 14px/1.4 "Hiragino Sans GB", "Lucida Grande", "Lucida Sans Unicode", Helvetica, Arial, Verdana, sans-serif
	-webkit-font-smoothing antialiased

h1
h2
h3
h4
h5
h6
	margin-top 0
	margin-right 0
	margin-bototm 0
	margin-left 0

textarea
	resize none

.is-mobile
	color white
	background url('/mobile-layout-background.png') no-repeat center center fixed
	background-size cover
	& h1
	& h2
	& h3
	& h4
	& h5
	& h6
		color white
	& a
		color white
		&:hover
			text-decoration none
	& input
	& textarea
	& button
		border 0
		border-radius 0
		background-color rgba(255, 255, 255, .1)
		color white
		&:hover
			background-color rgba(255, 255, 255, .2)
			color white
	& ::-webkit-input-placeholder
		color rgba(255, 255, 255, .4)

// layout

#mobile-layout-wrapper
	-webkit-perspective: 1500px;
	&.open-menu
		#mobile-page
			-webkit-transform translate3d(70%, 0, 0)
			// transform translateX(30%) rotateY(-45deg) translateZ(-50px)
		#mobile-leftside
			-webkit-transform translate3d(0, 0, 0)

#mobile-page
	-webkit-transform translate3d(0, 0, 0)
	// -webkit-transform translateX(0) rotateY(0) translateZ(0)
	-webkit-overflow-scrolling touch
	overflow-y scroll
	padding 40px 0 0 0
	box-shadow 0 0 12px rgba(0, 0, 0, .7)

// topnav

#mobile-topnav
	position fixed
	z-index 999
	top 0
	right 0
	left 0
	// padding 0 15px
	width 100%
	height 40px
	line-height @height
	text-align center
	background-color rgba(255, 255, 255, .1)
	clearfix()

// leftnav

#mobile-leftside
	-webkit-transform translate3d(-100%, 0, 0)
	position absolute
	top 40px
	bottom 0
	left 0
	width 70%
	font-size 20px
	& ul
		& li
			& a
				display block
				padding 15px
				text-align center
		& li.active
			& a
				background-color rgba(255, 255, 255, .1)

// signin

#mobile-signin-wrapper
	display table
	color white

#mobile-signin
	display table-cell
	padding 0 30px
	text-align center
	vertical-align middle
	& h1
		margin-bottom 30px
